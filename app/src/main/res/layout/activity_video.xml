<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Train.VideoActivity"
    android:background="#f6f6f6"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/train_background"
        android:id="@+id/background_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/white_arrow"
        android:layout_margin="15dp"
        android:id="@+id/video_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumping Rope"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20dp"
        android:id="@+id/video_f_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_back_arrow"
        android:layout_margin="20dp"
        />
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.2"
    android:id="@+id/video_viewf"
    android:layout_margin="13dp"
    >
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/video_view"
            android:layout_margin="13dp"

            />
</FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tool : Rope/Free \n Sets : 3 x Reps: 15 "
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_margin="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_viewf"
        android:id="@+id/video_s_tv"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_first_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_s_tv"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="20dp"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPS"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_below_first_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_first_set"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">
            <CheckBox
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/first_check_box"
                android:button="@drawable/check_box_settings"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="( REST : 10 )"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="#e9e9e9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_below_first_set"
        android:id="@+id/rest1"/>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:id="@+id/layout_second_set"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/rest1"
    android:orientation="horizontal"
    android:background="#fff"

    android:weightSum="3"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPS"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textAlignment="center"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_below_second_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_second_set"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">
            <CheckBox
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/second_check_box"
                android:button="@drawable/check_box_settings"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="( REST : 10 )"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="#e9e9e9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_below_second_set"
        android:id="@+id/rest2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_third_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rest2"
        android:orientation="horizontal"
        android:background="#fff"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPS"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_below_third_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_third_set"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">
            <CheckBox
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/third_check_box"
                android:button="@drawable/check_box_settings"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_below_third_set"
        app:layout_constraintBottom_toBottomOf="parent"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="20dp"

            >
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/video_button_back"
            android:id="@+id/video_button_back"
            android:layout_margin="10dp"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_shape"
            android:text="COMPLETE"
            android:id="@+id/video_button_complete"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/video_button_pause"
            android:id="@+id/video_button_pause"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>