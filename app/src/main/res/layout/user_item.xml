<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#fff"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile_pic"
        android:layout_centerVertical="true"
        android:id="@+id/item_user_image_admin"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_toRightOf="@+id/item_user_image_admin"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:textSize="26dp"
        android:textStyle="bold"
        android:id="@+id/item_username_admin"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/add_member"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/item_add_member"
        android:layout_margin="10dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/update_member"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_add_member"
        android:id="@+id/item_update_member"
        android:layout_margin="10dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/delete_member"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_update_member"
        android:id="@+id/item_delete_member"
        android:layout_margin="10dp"
        />

</RelativeLayout>