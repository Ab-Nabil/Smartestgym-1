<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createprofilebackground"
    tools:context=".CreateProfile.CreateBdateActivity">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/backrow"
        android:id="@+id/bDateBackRow"
        />
    <RelativeLayout
        android:layout_below="@+id/bDateBackRow"
        android:id="@+id/bDateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:id="@+id/textcreate"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE YOUR PROFILE"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/colorWhite"
            />
        <ImageView
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cp4"
            android:id="@+id/bDatep4"
            />
        <TextView
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/bDatep4"
            android:textSize="20sp"
            android:id="@+id/whatis"
            />
        <TextView
            android:layout_alignParentStart="true"
            android:autoSizeTextType="uniform"
            android:textSize="35dp"
            android:gravity="start"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/whatis"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR\nBIRTH-DATE ?"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bDateForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/bDateTitle"
        android:layout_above="@+id/bDateForwardRow"
        android:gravity="center"
        >

        <ImageView
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:id="@+id/bDateImage"
            android:src="@drawable/bdateimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <EditText
            android:id="@+id/bDateEditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/bDateImage"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/enterdata"
            android:focusable="false"
            android:hint="ENTER YOUR BIRTH DATE ..."
            android:inputType="date"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorGray"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/forwardrow"
        android:id="@+id/bDateForwardRow"
        />
</RelativeLayout>