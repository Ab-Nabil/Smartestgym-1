<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Train.VideoActivity"
    android:background="#f6f6f6"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativevid1"
        android:layout_alignParentTop="true"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/train_background"
        android:id="@+id/background_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"


        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/white_arrow"
        android:layout_margin="5dp"
        android:id="@+id/video_back_arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_below="@+id/video_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumping Rope"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="10sp"
        android:id="@+id/video_f_tv"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        />
    <FrameLayout
        android:layout_below="@+id/video_f_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintVertical_bias="0.2"
        android:id="@+id/video_viewf"
        android:layout_margin="5dp"
        >
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/video_view"
            />
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tool : Rope/Free \t Sets : 3 x Reps: 10 "
        android:textColor="#000"
        android:textSize="13sp"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/video_viewf"
        android:id="@+id/video_s_tv"
        />
    <Chronometer
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        tools:ignore="MissingConstraints"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/video_viewf"
        android:layout_alignRight="@+id/video_s_tv"
        />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/relativevid1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_first_set"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPS"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_below_first_set"
        android:layout_below="@+id/layout_first_set"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">
            <CheckBox
                android:visibility="invisible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/first_check_box"
                android:button="@drawable/check_box_settings"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="( REST : 10 )"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="#e9e9e9"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_below_first_set"
        android:id="@+id/rest1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_second_set"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rest1"
        android:orientation="horizontal"
        android:background="#fff"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPS"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_below_second_set"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_second_set"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">
            <CheckBox
                android:visibility="invisible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/second_check_box"
                android:button="@drawable/check_box_settings"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="( REST : 10 )"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="#e9e9e9"
        android:layout_alignParentStart="true"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@+id/layout_below_second_set"
        android:id="@+id/rest2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_third_set"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rest2"
        android:orientation="horizontal"
        android:background="#fff"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPS"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/layout_below_third_set"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_third_set"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">
            <CheckBox
                android:visibility="invisible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/third_check_box"
                android:button="@drawable/check_box_settings"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:orientation="vertical"

        android:layout_below="@+id/layout_below_third_set"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_shape"
        android:text="Start"
        android:id="@+id/video_button_start"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_below="@+id/layout_below_third_set"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_shape"
        android:text="continue"
        android:id="@+id/video_button_continue"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/layout_below_third_set"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            >

            <Button
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/video_button_back"
                android:id="@+id/video_button_back"
                android:layout_margin="5dp"
                />
            <Button
                android:visibility="invisible"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_shape"
                android:text="Complete"
                android:id="@+id/video_button_complete"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                />

            <Button
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/video_button_pause"
                android:id="@+id/video_button_pause"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                />
        </LinearLayout>
    </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>